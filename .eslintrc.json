{
  "root": true,
  "env": {
    "es6": true,
    "node": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "google",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "tsconfig.json",
      "tsconfig.dev.json"
    ],
    "sourceType": "module"
  },
  "ignorePatterns": [
    "/lib/**/*",
    "/docs/**/*"
  ],
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      2
    ],
    "padded-blocks": [
      "error",
      {
        "blocks": "never",
        "classes": "always",
        "switches": "always"
      }
    ],
    "no-multiple-empty-lines": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}