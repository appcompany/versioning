{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run build && firebase emulators:exec 'mocha -r ts-node/register test/**/*.ts'",
    "coverage": "npm run build && nyc -r lcov -r text-summary mocha -r ts-node/register test/*.ts",
    "coverage:html": "npm run build && nyc -r html -r text-summary mocha -r ts-node/register test/*.ts",
    "docs": "jsdoc -c jsdoc.json src/*.ts -d docs"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/functions.js",
  "dependencies": {
    "@types/express": "^4.17.11",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "better-docs": "^2.3.2",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.23.2",
    "jsdoc": "^3.6.7",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.2.4",
    "pug": "3.0.2"
  },
  "private": true
}