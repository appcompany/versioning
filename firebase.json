{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "functions": {
      "host": "localhost",
      "port": "9821"
    },
    "hosting": {
      "host": "localhost",
      "port": "8080"
    }
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/verify-message",
        "function": "verifyMessage"
      },
      {
        "source": "/generate-version",
        "function": "generateVersion"
      }
    ]
  }
}
