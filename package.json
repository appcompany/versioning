{
  "name": "versioning-action",
  "bin": {
    "verify-message": "dist/validate/index.js"
  },
  "scripts": {
    "build": "ncc build --minify src/main.ts -o dist/action && ncc build --minify src/validate/validate.ts -o dist/validate",
    "test": "mocha -r ts-node/register -p tsconfig.json spec/*.spec.ts spec/**/*.spec.ts",
    "coverage": "nyc -r lcov -r text-summary npm run test",
    "format:prettier": "prettier --write src/*.ts spec/*.ts",
    "format:eslint": "eslint --fix --ext .js,.ts src/ spec/",
    "format": "run-s format:*",
    "lint:prettier": "prettier --check src/*.ts spec/*.ts",
    "lint:eslint": "eslint --ext .js,.ts src/ spec/",
    "lint": "run-s lint:*",
    "verify-message": "ts-node src/validate/validate.ts",
    "prepare": "husky install"
  },
  "main": "dist/validate/index.js",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-friendly": "^0.7.1",
    "@onezerocompany/eslint-config": "^1.4.0",
    "@onezerocompany/prettier-config": "^1.0.1",
    "@onezerocompany/tsconfig-node": "^1.1.0",
    "@types/chai": "^4.2.21",
    "@types/express": "^4.17.13",
    "@types/mocha": "^8.2.3",
    "@types/nock": "^11.1.0",
    "@types/node": "^16.3.2",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/parser": "^4.28.4",
    "@vercel/ncc": "^0.28.6",
    "chai": "^4.3.4",
    "chai-nock": "^1.3.0",
    "eslint": "^7.31.0",
    "husky": "^7.0.1",
    "mocha": "^8.0.0",
    "nock": "^13.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "prettier-eslint": "^12.0.0",
    "sinon": "^11.1.1",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "prettier": "@onezerocompany/prettier-config",
  "eslintConfig": {
    "root": true,
    "extends": "@onezerocompany",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true
    }
  },
  "private": true,
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "yaml": "^1.10.2"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "check-coverage": true
  },
  "compilerOptions": {
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es6",
      "node"
    ]
  }
}
